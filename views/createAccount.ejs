<%- include('partials/header') %>

<h2 style="text-align: center;">Create An Account</h2>
<br><br>
<form action="/createAccount" method="post" style="text-align: center;">
    <label for="username">Username: </label>
    <input type="text" id="username" name="username" required>
    <br><br>
    <label for="password">Password: </label>
    <input type="password" id="password" name="password" required>
    <br><br>
    <button type="submit">Sign Up</button>
</form>

<br>
<% if (typeof message != 'undefined'){ %>
    <p style="color: darkblue; text-align: center;"><%= message %></p>
<% } %>

<br><br>
<p>
    <strong>Note: </strong>
    <br>The username can contain letters (both upper and lowercase) and digits only. </li>
    <br>The password has to be least 4 characters long and only digits and letters are allowed
        <br>The password must have at least one letter and at least one digit
</p>

